<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InToGuide.MainPage" >


    <StackLayout>
        <Label Text="Logos Image" HorizontalOptions="Center" FontSize="40"/>
        <Frame>

         <Label Text="Welcome to InToGuide" BackgroundColor="#f79726" HorizontalOptions="Center" FontSize="30" FontAttributes="Bold"/>
        </Frame>
        <Label Text="INDUSTRY TOUR GUIDE" HorizontalOptions="Center" FontSize="10"/>
       
        <Button x:Name="Mentor" Text="I AM A MENTOR" FontSize="15" BackgroundColor="#f79726" CornerRadius="50" Clicked="Mentor_Clicked"/>
        <Label Text="Are you an experienced proffessional?" HorizontalOptions="Center"/>

        <Button x:Name="Mentee" Text="I AM A QUALIFIED GRADUATE" FontSize="15" BackgroundColor="#f79726" CornerRadius="50" Clicked="Mentee_Clicked"/>
        <Label Text="Are you a qualified graduate?" HorizontalOptions="Center"/>
       

    </StackLayout>

</ContentPage>
